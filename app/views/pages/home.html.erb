  <section class="portfolio section" id="portfolio">
    <h2 class="section__title">Portfolio</h2>
    <span class="section__subtitle">Most recent work</span>
    <div class="portfolio__container container swiper mySwiper" data-controller="carousel">
      <div class="swiper-wrapper">
        <div class="portfolio__content grid swiper-slide">
          <%= image_tag "Screen Shot 2022-09-06 at 9.49.10.png", alt: "text", class:"portfolio__img" %>
          <div class="portfolio__data">
            <h3 class="portfolio__title">Video Game Marketplace</h3>
            <p class="portfolio__description">A marketplace where you can rent or lease a wide variety of video games.</p>
            <a href="https://video-game-928.herokuapp.com/" class="button button--flex button--small portfolio__button" target="_blank">
              Demo<i class="uil uil-arrow-right button__icon"></i>
            </a>
          </div>
        </div>
        <div class="portfolio__content grid swiper-slide">
          <%= image_tag "Screen Shot 2022-09-07 at 15.44.12.png", alt: "text", class:"portfolio__img" %>
          <div class="portfolio__data">
            <h3 class="portfolio__title">Chrysalis</h3>
            <p class="portfolio__description">Hikikomori is one of the major social problems in Japan. This web application aims to help people gain confidence and leave their homes by completing small tasks on a daily basis.</p>
            <a href="https://chrysalis-hikikomori.herokuapp.com/" class="button button--flex button--small portfolio__button" target="_blank">
              Demo<i class="uil uil-arrow-right button__icon"></i>
            </a>
          </div>
        </div>
        <div class="portfolio__content grid swiper-slide">
          <%= image_tag "Screen Shot 2022-09-07 at 15.44.53.png", alt: "text", class:"portfolio__img" %>
          <div class="portfolio__data">
            <h3 class="portfolio__title">Sunnyside</h3>
            <p class="portfolio__description">Landing page with cheerful and colorful design, associated with click function to display the modal.</p>
            <a href="https://landing-page-sunnyside.herokuapp.com/" class="button button--flex button--small portfolio__button" target="_blank">
              Demo<i class="uil uil-arrow-right button__icon"></i>
            </a>
          </div>
        </div>
        <div class="portfolio__content grid swiper-slide">
          <%= image_tag "Screen Shot 2022-09-07 at 15.45.48.png", alt: "text", class:"portfolio__img" %>
          <div class="portfolio__data">
            <h3 class="portfolio__title">World Breakfast</h3>
            <p class="portfolio__description">An application created in Ruby on rails and Javascript that allows you to browse breakfasts around the world. You can create your own list with images.</p>
            <a href="https://breakfast-alot.herokuapp.com/" class="button button--flex button--small portfolio__button" target="_blank">
              Demo<i class="uil uil-arrow-right button__icon"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="swiper-button-next">
        <i class="uil uil-angle-right-b swiper-portfolio-icon"></i>
      </div>
      <div class="swiper-button-prev">
        <i class="uil uil-angle-left-b swiper-portfolio-icon"></i>
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </section>
  <section class="contact section" id="contact">
    <h2 class="section__title">Contact Me</h2>
    <span class="section__subtitle">Get in touch</span>
    <div class="contact__container container grid">
      <div>
        <div class="contact__information">
          <i class="uil uil-envelope contact__icon"></i>
          <div>
            <h3 class="contact__title">Email</h3>
            <span class="contact__subtitle">koki.webdeveloper@gmail.com</span>
          </div>
        </div>
        <div class="contact__information">
          <i class="uil uil-map-marker contact__icon"></i>
          <div>
            <h3 class="contact__title">Location</h3>
            <span class="contact__subtitle">Tokyo</span>
          </div>
        </div>
      </div>
      <form action="https://getform.io/f/e58653ea-f27c-4f96-be9d-3389e182327d" class="contact__form grid" method="POST">
        <div class="contact__inputs grid">
          <div class="contact__content">
            <label for="" class="contact__label">Name</label>
            <input type="text" class="contact__input" name="name">
          </div>
          <div class="contact__content">
            <label for="" class="contact__label">Email</label>
            <input type="email" class="contact__input" name="email">
          </div>
        </div>
        <div class="contact__content">
          <label for="" class="contact__label">Project</label>
          <input type="text" class="contact__input" name="project">
        </div>
        <div class="contact__content">
          <label for="" class="contact__label">Message</label>
          <textarea name="message" id="" cols="0" rows="7" class="contact__input"></textarea>
        </div>
        <div>
          <a class="button button--flex" type="submit">
            Send Message<i class="uil uil-message button__icon"></i>
          </a>
        </div>
      </form>
    </div>
  </section>
